<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--
|- ActionBar 顶部actionbar
    |- ~Compat
    |- ~TextView
    |- ~ButtonWrapper
|- Dashboard 仪表盘
    |- ~Button
|- FooterBar 底部常用跳转
|- Form
    |- ~Item
    |- ~Label 文本框下方的说明文字
-->
    <style name="ActionBarCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/gdufs_blue</item>
    </style>
    
    <style name="ActionBarTextView">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ActionBarButtonWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:divider">@color/split_line</item>
    </style>
    
    <style name="DashboardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/strong_text</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#dedede</item>
    </style>
    
    <style name="FormItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dip</item>
        <item name="android:textColorHint">@color/strong_text</item>
    </style>
    
    <style name="FormLabel" parent="@style/FormItem">
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/form_label</item>
    </style>
</resources>