<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--
|- ActionBar 顶部actionbar
    |- ~Compat
    |- ~TextView
    |- ~ButtonWrapper
    |- ~ButtonItem
|- Dashboard 仪表盘
    |- ~Button
|- FooterBar 底部常用跳转
|- SplitLine 分割线
|- Form
    |- ~Wrapper 用于LinearLayout
    |- ~Item
    |- ~TextItem
    |- ~Label 文本框下方的说明文字
|- LinearForm
    |- ~Item 子元素，一个横条
    |- ~Header 标题
    |- ~Content 内容
|- Table
    |- ~Item 用于TableLayout的子元素
    |- ~TextItem 用于TextView元素
    |- ~TextItemGL 文本元素文字左对齐
    |- ~TextItemGR 文本元素文字右对齐
|- Syllabus 我的课表
    |- ~Time 几点到几点
    |- ~Day 星期几
|- Calendar 校历
    |- ~Col 星期列
|- Tab
    |- Wrapper 包含所有Tab的LinearLayout
-->
    <style name="ActionBarCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/gdufs_blue</item>
    </style>
    
    <style name="ActionBarTextView">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ActionBarButtonWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="ActionBarButtonItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="DashboardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/strong_text</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#dedede</item>
    </style>
    
    <style name="SplitLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/split_line</item>
    </style>
        
    <style name="FormWrapper">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:orientation">vertical</item>
    </style>    
    
    <style name="FormItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dip</item>
        <item name="android:textColorHint">@color/strong_text</item>
    </style>
    
    <style name="FormTextItem" parent="@style/FormItem">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="FormLabel" parent="@style/FormItem">
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/form_label</item>
    </style>
    
    <style name="LinearFormItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="LinearFormHeader" parent="@style/LinearFormItem">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:background">@color/split_line</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="LinearFormContent" parent="@style/LinearFormItem">
        <item name="android:paddingLeft">28dip</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">@color/strong_text</item>
    </style>
    
    <style name="TableItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dip</item>
    </style>
    
    <style name="TableTextItem" parent="@style/TableItem">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="TableTextItemGL" parent="@style/TableTextItem">
        <item name="android:gravity">left</item>
    </style>
    
    <style name="TableTextItemGR" parent="@style/TableTextItem">
        <item name="android:gravity">right</item>
    </style>
    
    <!-- Syllabus 我的课表 -->
        <!-- 上下午 TextView -->
    <style name="SyllabusNoon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">6dip</item>
        <item name="android:gravity">center</item>
    </style>
        <!-- 小节列容器 LinearLayout -->
    <style name="SyllabusCutters">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
        <!-- 小节 TextView -->
    <style name="SyllabusCutter">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:width">18dip</item>
        <item name="android:gravity">center</item>
    </style>
        <!-- 课程列容器 LinearLayout -->
    <style name="SyllabusClasses">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
        <!-- 课程内容 TextView -->
    <style name="SyllabusClass">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dip</item>
    </style>
        <!-- 星期几 TextView -->
    <style name="SyllabusDay">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_light</item>
    </style>
        <!-- 星期几标志线 View -->
    <style name="SyllabusDayLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <!-- Calendar 校历 -->
        <!-- 星期列 -->
    <style name="CalendarCol">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">1dip</item>
        <item name="android:paddingLeft">1dip</item>
        <item name="android:background">@color/blue_light</item>
    </style>
    <style name="CalendarItem">
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/window_background</item>
        <item name="android:text">1</item>
    </style>
    <style name="CalendarWeek" parent="@style/CalendarItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CalendarDay" parent="@style/CalendarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Tab 标签切换 -->
    <style name="TabWrapper">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TabItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>
    <style name="TabItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TabItemLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:background">@color/black_light</item>
    </style>
    <style name="TabItemTextCurrent" parent="@style/TabItemText">
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="TabItemLineCurrent" parent="@style/TabItemLine">
        <item name="android:background">@color/green</item>
    </style>
</resources>